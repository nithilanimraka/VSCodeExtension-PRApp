{
  "name": "github-pr-handler",
  "displayName": "Github PR handler",
  "description": "This is a Github Pull request extension which handles and reviews PRs",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:yourPrViewId", 
    "onCommand:yourExtension.createPullRequest", 
    "onCommand:yourExtension.refreshPrView",
    "onAuthenticationRequest:github" 
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "your-pr-activitybar",
          "title": "Your PRs",
          "icon": "$(git-pull-request)" 
        }
      ]
    },
    "commands": [
      {
        "command": "yourExtension.createPullRequest",
        "title": "Create GitHub Pull Request",
        "category": "Your PR Extension"
      },
      {
        "command": "yourExtension.refreshPrView",
        "title": "Refresh Pull Request View",
        "category": "Your PR Extension",
        "icon": "$(refresh)"
      },
      {
        "command": "yourExtension.viewPullRequest",
        "title": "View Pull Request Details"
      },
      {
        "command": "yourExtension.viewDiff",
        "title": "View Pull Request Diff"
      }
    ],
    "menus": {
      "view/title": [ 
          {
             "command": "yourExtension.refreshPrView",
             "when": "view == yourPrViewId", 
             "group": "navigation"
          }
       ]
    },
    "views": {
      "your-pr-activitybar": [
        {
          "id": "yourPrViewId", 
          "name": "GitHub Pull Requests",
          "icon": "$(git-pull-request)", 
          "contextualTitle": "Your PRs"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.98.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@octokit/rest": "^18.12.0",
    "@types/node-fetch": "^2.6.12",
    "node-fetch": "^3.3.2"
  }
}
