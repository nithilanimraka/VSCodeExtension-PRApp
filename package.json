{
  "name": "github-pr-handler",
  "displayName": "Github PR handler",
  "description": "This is a Github Pull request extension which handles and reviews PRs",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "extensionDependencies": [
		"vscode.git"
	],
  "activationEvents": [
    "onView:yourPrViewId",
    "onCommand:yourExtension.showCreatePullRequestView",
    "onCommand:yourExtension.refreshPrView",
    "onCommand:yourExtension.viewPullRequest",
    "onCommand:yourExtension.viewItemDiff",
    "onAuthenticationRequest:github"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "your-pr-activitybar",
          "title": "Your PRs",
          "icon": "$(code-review)"
        }
      ]
    },
    "commands": [
      {
        "command": "yourExtension.showCreatePullRequestView",
        "title": "Create Pull Request",
        "icon": "$(git-pull-request-create)"
      },
      {
        "command": "yourExtension.viewItemDiff",
        "title": "View Changes",
        "icon": "$(diff)"
      },
      {
        "command": "yourExtension.refreshPrView",
        "title": "Refresh Pull Request View",
        "category": "Your PR Extension",
        "icon": "$(refresh)"
      },
      {
        "command": "yourExtension.viewPullRequest",
        "title": "View Pull Request Details"
      },
      {
        "command": "yourExtension.viewDiff",
        "title": "View Pull Request Diff"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "yourExtension.refreshPrView",
          "when": "view == yourPrViewId",
          "group": "navigation"
        },
        { 
          "command": "yourExtension.showCreatePullRequestView",
          "when": "view == yourPrViewId", 
          "group": "navigation@1"
        }
      ],
      "view/item/context": [
        {
          "command": "yourExtension.viewItemDiff",
          "when": "view == yourPrViewId && viewItem == pullRequestItem",
          "group": "inline"
        },
        {
          "command": "yourExtension.viewItemDiff",
          "when": "view == yourPrViewId && viewItem == pullRequestItem",
          "group": "navigation@1"
        }
      ]
    },
    "views": {
      "your-pr-activitybar": [
        {
          "id": "yourPrViewId", 
          "name": "GitHub Pull Requests",
           "type": "tree" 
        },
        {
          "id": "yourCreatePrViewId",
          "name": "Create Pull Request", 
          "type": "webview", 
          "when": "yourExtension:createPrViewVisible"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts ./src/webview/createPrMain.ts ./src/webview/createPrStyles.css --bundle --external:vscode --format=cjs --platform=node --outdir=dist", 
    "build": "npm run esbuild-base -- --sourcemap",
    "watch": "npm run esbuild-base -- --sourcemap --watch",
    "pretest": "npm run build && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.98.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/codicons": "^0.0.36",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.25.2",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@octokit/rest": "^18.12.0",
    "@types/markdown-it": "^14.1.2",
    "@types/node-fetch": "^2.6.12",
    "markdown-it": "^14.1.0",
    "node-fetch": "^3.3.2"
  }
}
